{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@core/*": [
                "core/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@components/*": [
                "components/*"
            ]
        },
        "types": [
            "node",
            "jquery"
        ]
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts",
        "manifest.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}